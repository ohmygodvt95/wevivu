<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Wevivu</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDCEZ8DButde0dy2DrGsVVoeOSlT3vA7P0&extension=.js&libraries=places"></script>
  <%= javascript_include_tag 'application' %>
  <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700,900" rel="stylesheet">
  <%= csrf_meta_tags %>
  <% if logged_in? %>
      <meta userid="<%= current_user.id %>">
  <% end %>
</head>
<body ng-app="wevivu" <%= raw !logged_in? ? 'ng-controller="LoginController"' : '' %> >

<%= render 'layouts/navbar' %>
<% if logged_in? %>
    <div class="app">
      <%= render 'layouts/view' %>
    </div>

<% else %>
    <div class="main">
      <%= yield %>
    </div>
<% end %>

<%= render 'layouts/footer' %>

<% if logged_in? %>
    <!--<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDCEZ8DButde0dy2DrGsVVoeOSlT3vA7P0" async defer></script>-->
    <script src="https://raw.githubusercontent.com/garand/sticky/master/jquery.sticky.js"></script>
    <script src="/js/app.js"></script>
    <script src="/js/services/dataTransferFactory.js"></script>
    <script src="/js/controllers/homeController.js"></script>
    <script src="/js/controllers/wallController.js"></script>
    <script src="/js/controllers/newPostController.js"></script>
    <script src="/js/directives/inputComment.js"></script>
<% else %>
    <script src="/js/controllers/loginController.js"></script>
<% end %>
</body>
</html>
